<!DOCTYPE html>
<html>
  <head>
    <% include include/head %>
    <title>Recherche</title>
  </head>

  <body>
    <% include include/header %>
    <h1>Résultats de la Recherche</h1>
    <section>
      <form action="/recherche.html" method="post">
          <p>
	    <input type="text" name="search" id="search" placeholder="Rechercher" required />
	    <select name="cat" size="1" id="cat" >
	      <option value="t">Tout</option>
	      <option value="r">Recette</option>
	      <option value="u">Utilisateur</option>
	      <option value="a">Atelier</option>
	    </select>
            <input type="submit" id="ok" name="ok" value=" "/>
	  </p>
      </form>
	  <p>
	    <div class="list">
              <% if (search.rows.length == 0 &&  ate.rows.length == 0 && rol.rows.length == 0) { %>
              	<p>Aucun résultat</p>
              <% } else { %>
              <% if (cate == "r" || cate == "t" || cate == null) { %>
		  <ul>
                  <% for(var i = 0 ; i < search.rows.length ; i++) { %>
                    <li>
                    <a href="/recette.html?titre=<%= search.rows[i].titre %>">
                    <% if (search.rows[i].image == null) { %>
                    <img src="resources/recette.png" />
                    <% } else { %>
                    <img src="<%= search.rows[i].image %>" />
                    <% } %>
                    <div class="description">
                    <h3><%= search.rows[i].titre %></h3>
                    <p><%= search.rows[i].type %></p>
                    <p><% for (j = 0; j < search.rows[i].difficulte; j++) { %>
                        <img src="resources/spatula.png" class="star"/>
                    <% } %>
                    </p>
		    </div>
		    </a>
		    </li>
		<% } %>
		  </ul>
	      <% } if (cate == "t" || cate == "a" || cate == null) { %>
		<ul>
        	  <% for(var i = 0 ; i < ate.rows.length ; i++) { %>
        	    <li>
                    <a href="/atelier.html?titre=<%= ate.rows[i].titre %>">
                    <% if (ate.rows[i].image == null) { %>
                    <img src="resources/chinois.png" />
                    <% } else { %>
                    <img src="<%= ate.rows[i].image %>" />
                    <% } %>
                    <div class="description">
                    <h3><%= ate.rows[i].titre %></h3>
                    Chef cuisinier : 
                    <%= ate.rows[i].prenom %> <%= ate.rows[i].nom %></br>
                    <%= ate.rows[i].prix %> €
		    </div>
		    </a>
		    </li>
		   </ul>
		<% } } if (cate == "t" || cate =="u" || cate == null) { %>
		  <ul>
		    <% for(var i =0 ; i < rol.rows.length; i++) { %>
		      <li>
		      <a href="/profil.html?id=<%= rol.rows[i].id %>">
              <% if (role.rows[i].image == null) { %>
              <img src="resources/user.png" />
              <% } else { %>
              <img src="<%= role.rows[i].image %>" />
              <% } %>
		      <div class="description">
		      <h3>Chef <%= rol.rows[i].nom %></h3>
	             </div>
		     </a>
		     </li>
		    <% } %>
		  </ul>	  
	        <% } %>
              </ul>
	      <% } %>
	      </div>
            </a>
        </li>
	</p>
    </section>
    <% include include/footer %>
  </body>
</html>
